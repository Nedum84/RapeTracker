<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.act_login.FragmentLogin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="...My Rape Complains..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#B4FFFFFF"
            android:padding="12dp"
            android:textColor="@color/colorRedDark"
            android:textAllCaps="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bdbdbd"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rape_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/noComplainWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have not logged any sexual complain"
                android:textSize="20sp"
                android:gravity="center" />

            <com.github.florent37.shapeofview.shapes.BubbleView
                android:id="@+id/logComplainBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shape_bubble_arrowHeight="0dp"
                app:shape_bubble_arrowWidth="0dp"
                app:shape_bubble_arrowPosition="top"
                app:shape_bubble_borderRadius="60dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log New Complain"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:padding="12dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/v_arrow_right"
                        android:tint="@color/colorWhite"
                        android:layout_marginStart="-8dp"/>

                </LinearLayout>

            </com.github.florent37.shapeofview.shapes.BubbleView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/noComplainForSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/no_complain_title_show_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No complain Logged for the Police Support"
                android:textSize="20sp"
                android:gravity="center" />

        </LinearLayout>


    </LinearLayout>
</layout>