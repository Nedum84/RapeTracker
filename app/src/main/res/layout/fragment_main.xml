<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.act_login.FragmentLogin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rape Complains"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#B4FFFFFF"
            android:padding="14dp"
            android:textColor="@color/colorRedDark"
            android:textAllCaps="true"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rape_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/noComplainWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have not logged any sexual complain"
                android:textSize="20sp"
                android:gravity="center" />

            <Button
                android:id="@+id/logComplainBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Complain" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/noComplainForSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/no_complain_title_show_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No complain Logged for the Police Support"
                android:textSize="20sp"
                android:gravity="center" />

        </LinearLayout>


    </LinearLayout>
</layout>