<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.act_login.FragmentPromptToLogin"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:padding="30dp">

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Welcome to Gender Based Violence Tracker"-->
<!--            android:layout_margin="20dp"-->
<!--            android:gravity="center"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/colorBlack"-->
<!--            android:textSize="28sp" />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/z_home"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="Are you involved in any form of Gender based Based Violence or you know someone who is?"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:targetApi="o" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't worry, we are here for you. Click to proceed."
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="15sp"
            tools:targetApi="o" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp"
            android:layout_margin="6dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/regAsRapeVictimBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:padding="14dp"
                android:paddingStart="30dp"
                android:textSize="18sp"
                android:text="Log In"
                app:drawableEndCompat="@drawable/v_arrow_right" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp"
            android:layout_margin="6dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/regAsRapeSupportBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRedDark"
                android:padding="14dp"
                android:paddingStart="30dp"
                android:textSize="18sp"
                android:text="Create Account"
                app:drawableEndCompat="@drawable/v_arrow_right"
                android:drawableTint="@color/colorRedDark"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>