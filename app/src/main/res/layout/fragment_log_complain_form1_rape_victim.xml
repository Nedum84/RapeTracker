<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.act_login.FragmentLogin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/colorAshBg">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log sexual abuse complain"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who is involved in the violence?"
            android:layout_marginBottom="30dp"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"/>

        <LinearLayout
            android:id="@+id/rape_against_you_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/design_border_grey"
            android:padding="20dp"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/design_border_yellow"
                android:padding="6dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/v_pregnant_woman"/>
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Violence against you"
                android:layout_weight="1"
                android:textColor="@color/colorRedDark"
                android:layout_marginStart="6dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v_arrow_right"
                app:tint="@color/colorRedDark" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/against_someone_i_know_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/design_border_grey"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/design_border_yellow"
                android:padding="6dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/v_baseline_rowing"/>
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Against someone you know"
                android:layout_weight="1"
                android:textColor="@color/colorRedDark"
                android:layout_marginStart="6dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v_arrow_right"
                app:tint="@color/colorRedDark" />
        </LinearLayout>


    </LinearLayout>
</layout>