<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.act_login.FragmentPromptToLogin"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:padding="24dp">

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Welcome to Gender Based Violence Tracker"-->
<!--                    android:layout_margin="20dp"-->
<!--                    android:gravity="center"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/colorBlack"-->
<!--                    android:textSize="28sp" />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/z_home"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="Are you involved in any form of Gender Based Violence(GBV) or you know someone who is?"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:targetApi="o" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't worry, we are here for you. Click to proceed."
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="15sp"
            tools:targetApi="o" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp"
            android:layout_margin="6dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/gotoLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:padding="14dp"
                android:paddingStart="30dp"
                android:textSize="18sp"
                android:text="Log In"
                app:drawableEndCompat="@drawable/v_arrow_right" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/regBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp"
            android:layout_margin="6dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRedDark"
                android:padding="14dp"
                android:paddingStart="30dp"
                android:textSize="18sp"
                android:text="Create Account"
                app:drawableEndCompat="@drawable/v_arrow_right"
                android:drawableTint="@color/colorRedDark"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/call_help_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:padding="6dp"
            android:textIsSelectable="true"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:text="Help line: 08136845243"/>

    </LinearLayout>
</layout>