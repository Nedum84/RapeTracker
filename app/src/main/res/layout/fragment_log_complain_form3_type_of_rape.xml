<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.act_login.FragmentLogin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/colorAshBg">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Sexual Abuse"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What type of abuse was committed?\nClick on each info Icon by the right to learn more."
            android:layout_marginBottom="30dp"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_rape_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</layout>