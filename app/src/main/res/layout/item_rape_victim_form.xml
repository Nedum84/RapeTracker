<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="rape_victim"
            type="com.ng.rapetracker.model.RapeTypeOfVictim" />

        <variable
            name="clickListener"
            type="com.ng.rapetracker.adapter.RapeTypeOfVictimClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rapeVictimContainer"
        android:padding="20dp"
        android:onClick="@{()->clickListener.onClick(rape_victim)}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{rape_victim.typeOfVictim}"
            android:hint="Girls Under 18 years"
            android:textSize="18sp" />


    </LinearLayout>
</layout>