<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark2"
        tools:context=".ui.fragment.act_login.FragmentLogin"
        android:padding="30dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/app_logo_line1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAllCaps="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  as support organization"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="italic"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/support_type_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Litigation Support"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorRedDark"
                android:background="@color/colorPrimaryDark"
                android:padding="8dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="true"/>

            <EditText
                android:id="@+id/org_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Name of Organization"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/editText"/>

            <EditText
                android:id="@+id/org_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Telephone number"
                android:inputType="phone"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/editText"/>

            <EditText
                android:id="@+id/org_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email address"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="textEmailAddress"
                android:theme="@style/editText"/>

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/org_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:smsp_floatingLabelColor="#fff"
                app:smsp_floatingLabelText="Select Country"
                app:smsp_hint="Country"
                app:smsp_hintColor="@color/colorPrimaryDark"
                app:smsp_arrowColor="@color/colorPrimaryDark"
                app:smsp_underlineColor="@color/colorPrimaryDark"
                app:smsp_underlineSize="1px"
                app:smsp_hintSize="18sp"
                android:spinnerMode="dialog"
                app:smsp_isSearchable="true"
                app:smsp_searchHeaderText="Select Country"
                app:smsp_searchHeaderBackgroundColor="@color/colorPrimaryDark2"
                app:smsp_searchHint="Search for country..."
                app:smsp_searchHeaderTextColor="@color/colorPrimaryDark"
                app:smsp_arrowSize="18dp"
                app:smsp_itemColor="#f2f2f2"
                app:smsp_enableErrorLabel="false"
                app:smsp_itemListColor="@color/colorRedDark"
                app:smsp_itemListHintBackgroundColor="@color/colorPrimary"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="#FF5252" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/org_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:smsp_floatingLabelColor="#fff"
                app:smsp_floatingLabelText="Select State"
                app:smsp_hint="State"
                app:smsp_hintColor="@color/colorPrimaryDark"
                app:smsp_arrowColor="@color/colorPrimaryDark"
                app:smsp_underlineColor="@color/colorPrimaryDark"
                app:smsp_underlineSize="1px"
                app:smsp_hintSize="18sp"
                app:smsp_enableErrorLabel="false"
                android:spinnerMode="dialog"
                app:smsp_searchHeaderTextColor="@color/colorPrimaryDark"
                app:smsp_arrowSize="18dp"
                app:smsp_itemColor="#f2f2f2"
                app:smsp_itemListColor="@color/colorRedDark"
                app:smsp_itemListHintBackgroundColor="@color/colorPrimary"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="#FF5252" />

            <EditText
                android:id="@+id/org_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/editText"
                android:hint="Operational Address"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text|textMultiLine"
                android:minLines="2"
                android:gravity="top"
                android:maxLines="50"
                android:scrollbars="vertical"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/org_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Setup Password"
                android:theme="@style/editText"/>

            <Button
                android:id="@+id/org_reg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:background="@drawable/design_black_opacity"
                android:layout_marginTop="20dp"
                android:text="Register" />

        </LinearLayout>
    </ScrollView>
</layout>