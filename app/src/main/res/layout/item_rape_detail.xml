<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="rape_detail"
            type="com.ng.rapetracker.model.RapeDetail" />

        <variable
            name="clickListener"
            type="com.ng.rapetracker.adapter.RapeDetailClickListener" />
    </data>


    <LinearLayout
        android:id="@+id/rapeDetailContainer"
        android:orientation="vertical"
        android:onClick="@{() -> clickListener.onClick(rape_detail)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark2">

        <com.github.florent37.shapeofview.shapes.CutCornerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_cutCorner_bottomLeftSize="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#EEE"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/rape_victim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rape victim"
                        android:textAllCaps="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:background="#40777777"
                        android:textColor="#777"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingRight="16dp"
                        android:paddingEnd="16dp"
                        android:paddingLeft="16dp"
                        android:paddingStart="16dp"/>
                    <TextView
                        android:id="@+id/rape_date"
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="12 sept 2020 09:32AM"/>
                </LinearLayout>


                <com.github.florent37.shapeofview.shapes.CutCornerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shape_cutCorner_bottomLeftSize="5dp"
                    app:shape_cutCorner_topLeftSize="5dp"
                    android:layout_marginTop="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark2"
                            android:text="Reported By:"
                            android:textColor="#fff"
                            android:padding="4dp"
                            android:paddingStart="8dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRedDark"
                            android:text="@{rape_detail.userName}"
                            android:padding="4dp"
                            android:gravity="end"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </com.github.florent37.shapeofview.shapes.CutCornerView>

                <com.github.florent37.shapeofview.shapes.CutCornerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shape_cutCorner_bottomLeftSize="5dp"
                    app:shape_cutCorner_topLeftSize="5dp"
                    android:layout_marginTop="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark2"
                            android:text="Rape Type:"
                            android:textColor="#fff"
                            android:padding="4dp"
                            android:paddingStart="8dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRedDark"
                            android:hint="Molestation"
                            android:text="@{rape_detail.typeOfRape}"
                            android:padding="4dp"
                            android:textAllCaps="true"
                            android:gravity="end"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </com.github.florent37.shapeofview.shapes.CutCornerView>

                <com.github.florent37.shapeofview.shapes.CutCornerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shape_cutCorner_bottomLeftSize="5dp"
                    app:shape_cutCorner_topLeftSize="5dp"
                    android:layout_marginTop="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark2"
                            android:text="Address:"
                            android:textColor="#fff"
                            android:padding="4dp"
                            android:paddingStart="8dp"
                            android:paddingLeft="8dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRedDark"
                            android:text="@{rape_detail.rapeAddress}"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:gravity="end"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </com.github.florent37.shapeofview.shapes.CutCornerView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.github.florent37.shapeofview.shapes.BubbleView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:shape_bubble_arrowHeight="8dp"
                        app:shape_bubble_arrowWidth="8dp"
                        app:shape_bubble_arrowPosition="right"
                        app:shape_bubble_borderRadius="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Details"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:padding="8dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/v_arrow_right"
                                tools:ignore="ContentDescription"
                                android:layout_marginStart="-6dp" />
                        </LinearLayout>

                    </com.github.florent37.shapeofview.shapes.BubbleView>
                </RelativeLayout>

            </LinearLayout>
        </com.github.florent37.shapeofview.shapes.CutCornerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bdbdbd"/>
    </LinearLayout>
</layout>