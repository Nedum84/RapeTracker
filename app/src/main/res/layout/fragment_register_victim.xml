<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.fragment.act_login.FragmentLogin"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/z_rape_victim"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textAllCaps="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  as a victim/witness"
                    android:textColor="@color/black_overlay"
                    android:textStyle="italic"
                    android:textSize="14sp"/>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeColor="@color/colorAshBg"
                app:strokeWidth="1dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingStart="18dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_person_24"
                        tools:ignore="ContentDescription"
                        app:tint="@color/black_overlay" />

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Full name"
                        android:textColor="@color/colorRedDark"
                        android:theme="@style/editText"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeColor="@color/colorAshBg"
                app:strokeWidth="1dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="40dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingStart="18dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_phone_24"
                        tools:ignore="ContentDescription"
                        app:tint="@color/black_overlay" />

                    <EditText
                        android:id="@+id/user_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:hint="Phone no"
                        android:textColor="@color/colorRedDark"
                        android:theme="@style/editText"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeColor="@color/colorAshBg"
                app:strokeWidth="1dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="40dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingStart="18dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_round_email_24"
                        tools:ignore="ContentDescription"
                        app:tint="@color/black_overlay" />

                    <EditText
                        android:id="@+id/user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Email address"
                        android:textColor="@color/colorRedDark"
                        android:theme="@style/editText"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeColor="@color/colorAshBg"
                app:strokeWidth="1dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="40dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingStart="18dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_sentiment_satisfied_alt_24"
                        tools:ignore="ContentDescription"
                        app:tint="@color/black_overlay" />
                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/user_gender"
                        android:paddingStart="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:smsp_floatingLabelColor="#fff"
                        app:smsp_floatingLabelText="Select Gender"
                        app:smsp_hint="Gender"
                        app:smsp_hintColor="@color/black_overlay"
                        app:smsp_arrowColor="@color/colorPrimaryDark"
                        app:smsp_underlineColor="@android:color/transparent"
                        app:smsp_underlineSize="1px"
                        app:smsp_hintSize="14sp"
                        android:spinnerMode="dialog"
                        app:smsp_arrowSize="18dp"
                        app:smsp_itemColor="@color/colorRedDark"
                        app:smsp_itemListColor="#555555"
                        app:smsp_enableErrorLabel="false"
                        app:smsp_itemListHintBackgroundColor="@color/colorPrimary"
                        app:smsp_itemListHintColor="#FFFFFF"
                        app:smsp_multilineError="false"
                        app:smsp_selectedItemListColor="#FF5252" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeColor="@color/colorAshBg"
                app:strokeWidth="1dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="40dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingStart="18dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_accessibility_24"
                        tools:ignore="ContentDescription"
                        app:tint="@color/black_overlay" />

                    <EditText
                        android:id="@+id/user_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your age"
                        android:inputType="number"
                        android:textColor="@color/colorRedDark"
                        android:theme="@style/editText"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeColor="@color/colorAshBg"
                app:strokeWidth="1dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="40dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingStart="18dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_location_on_24"
                        tools:ignore="ContentDescription"
                        app:tint="@color/black_overlay" />

                    <TextView
                        android:id="@+id/user_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your address"
                        android:padding="10dp"
                        android:theme="@style/editText"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeColor="@color/colorAshBg"
                app:strokeWidth="1dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="40dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingStart="18dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_lock_24"
                        tools:ignore="ContentDescription"
                        app:tint="@color/black_overlay" />

                    <EditText
                        android:id="@+id/user_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="text"
                        android:textColor="@color/colorRedDark"
                        android:theme="@style/editText"
                        tools:ignore="TextFields" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/go_to_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Have an account? Login!"
                android:layout_margin="12dp"
                android:textSize="14sp"
                android:textStyle="bold"
                />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                android:backgroundTint="@color/colorAccent"
                android:layout_margin="12dp"
                app:cardCornerRadius="60dp">
                <TextView
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CREATE ACCOUNT"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/black_overlay"/>
            </com.google.android.material.card.MaterialCardView>



            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>
</layout>